<div class="container">
  <div class="row justify-content-between mb-5">
    <h3 class="col-2">商品一覧</h3>
    <%= link_to new_admin_item_path do %>
      <i class="fa-solid fa-plus fa-2x fa-border btn-new-item" style="color: gray; --fa-border-radius: 100%;"></i>
    <% end %>
  </div>
  <div class="row">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜価格</th>
        </tr>
      </thead>
      
      <tbody>
        <% @items.each do |item| %>
          <tr>
            <td class="col-3"><%= item.id %></td>
            <td class="col-6"><%= link_to "#{item.name}", admin_item_path(item.id), class: "secondary" %></td>
            <td class="col-3"><%= item.price %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>