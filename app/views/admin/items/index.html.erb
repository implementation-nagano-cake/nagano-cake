<h1>Admin::Items#index</h1>
<p>Find me in app/views/admin/items/index.html.erb</p>
<div class="container">
  <div class="row">
    <h3>商品一覧</h3>
    <%= link_to "item", new_admin_item_path %>
  </div>
  <div class="row">
    <table class="table table-hover table-inverse">
      <thead>
        <tr>
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜価格</th>
          <!--<th>ジャンル</th>-->
          <!--<th>ステータス</th>-->
        </tr>
      </thead>
      
      <tbody>
        <% @items.each do |item| %>
          <tr>
            <td class="col-2"><%= item.id %></td>
            <td class="col-8"><%= link_to "#{item.name}", admin_item_path(item.id) %></td>
            <td><%= item.price %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>