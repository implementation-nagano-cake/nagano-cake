<h1>Admin::Items#show</h1>
<p>Find me in app/views/admin/items/show.html.erb</p>
<div class="container">
  <div class="row">
    <h3>商品詳細</h3>
  </div>
  <div class="row">
    <div class='col-md-3'>
      <%= image_tag @item.get_image(200, 200) %>
    </div>
    <div class='col-md-8 offset-md-1 '>
      <label>商品名</label>
      <%= @item.name %><br>
      <label>商品説明</label>
      <%= @item.introduction %><br>
      <label>税込価格<br>
      (税抜価格)</label>
      <%= @item.price_including_tax.to_s(:delimited) %>(<%= @item.price.to_s(:delimited) %>)円
    </div>
    <%= link_to "Edit", edit_admin_item_path(@item.id), class: "btn btn-sm btn-success" %>
  </div>
</div>