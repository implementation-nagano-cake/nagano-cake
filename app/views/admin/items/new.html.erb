<div class="container">
  <div class="row">
    <h3>商品新規登録</h3>
  </div>
  <%= form_with model: @item, url: admin_items_path do |f| %>
    <div class="row offset-2 mb-3">
      <label class="col-2">商品画像</label>
       <%= f.file_field :image %>
    </div>
    <div class="row offset-2 mb-3">
      <label class="col-2">商品名</label>
      <%= f.text_field :name, size: 50, class: "col-4 p-0" %>
    </div>
    <div class="row offset-2 mb-3">
      <label class="col-2">商品説明</label>
      <%= f.text_area :introduction, class: "col-4 p-0", style: "height: 100px;" %>
    </div>
    <div class="row offset-2 mb-3">
      <label class="col-2">税抜価格</label>
      <%= f.text_field :price, class: "col-4 p-0" %>円
    </div>
    <div class="row justify-content-center">
      <%= f.submit "新規登録", class: "btn btn-success col-2" %>
    </div>
  <% end %>
</div>