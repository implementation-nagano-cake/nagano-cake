<div class="container">
  <div class="row">
    <h3>管理者ログイン</h3>
  </div>
  <!--<div class="row justify-content-center">-->
    <%= form_with model: @admin, url: admin_session_path do |f| %>
      <div class="row field justify-content-center mb-3">
        <%= f.label "メールアドレス", class: "col-2" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-5 p-0" %>
      </div>

      <div class="row field justify-content-center mb-3">
        <%= f.label "パスワード", class: "col-2" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "col-5 p-0" %>
      </div>

      <div class="row justify-content-center">
        <%= f.submit "ログイン", class: "btn btn-primary col-2"  %>
      </div>
    <% end %>
    <%= render "admin/shared/links" %>
  <!--</div>-->
</div>


<%#= render "admin/shared/links" %>
