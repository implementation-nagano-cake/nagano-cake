<h1>admin test</h1>
<div class="container">
  <div class="row">
    <h3>注文履歴一覧</h3>
  </div>
  <div class="row">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>購入日時</th>
          <th>購入者</th>
          <th>注文個数</th>
        </tr>
      </thead>
      
      <tbody>
        <% @orders.each do |order| %>
          <tr>
            <td class="col-3"><%= link_to"#{order.created_at}", admin_order_path(order.id) %></td>
            <td class="col-6"><%= order.customer.name %></td>
            <td class="col-3"><%= order.amount %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>