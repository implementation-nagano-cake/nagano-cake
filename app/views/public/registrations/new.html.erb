<div class="container">
  <div class="row">
    <h3>新規会員登録</h3>
  </div>

  <%= form_with model: @customer, url: customer_registration_path do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>
    <div class="row mb-1">
        <div class="col-2">名前</div>
        <div class="col-1 text-right">
          <%= f.label "(姓)" %>
        </div>
        <div class="col-2">
          <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", placeholder: "山田" %>
        </div>
        <div class="col-1 text-right">
          <%= f.label "(名)" %>
        </div>
        <div class="col-3">
          <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", placeholder: "令和" %>
      </div>
      </div>
    <div class="row mb-1">
        <div class="col-2">フリガナ</div>
        <div class="col-1 text-right p-0">
          <%= f.label "(セイ)" %>
        </div>
        <div class="col-2">
          <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana", placeholder: "ヤマダ" %>
        </div>
        <div class="col-1 text-right p-0">
          <%= f.label "(メイ)" %>
        </div>
        <div class="col-3">
          <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana", placeholder: "レイワ" %>
        </div>
      </div>
    <div class="row mb-1">
        <div class="col-3">メールアドレス</div>
        <div class="col-3">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com" %>
        </div>
      </div>
    <div class="row mb-1">
        <div class="col-3">郵便番号(ハイフンなし)</div>
        <div class="col-3">
          <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code", placeholder: "0001234" %>
        </div>
      </div>
    <div class="row mb-1">
        <div class="col-3">住所</div>
        <div class="col-7">
          <%= f.text_field :address, autofocus: true, autocomplete: "address", size: 60, placeholder: "東京都港区赤坂2-11-7 WEBCAMPマンション201号室" %>
        </div>
      </div>
    <div class="row mb-1">
        <div class="col-3">電話番号(ハイフンなし)</div>
        <div class="col-3">
          <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number", placeholder: "08012345678" %>
        </div>
      </div>
    <div class="row mb-1">
        <div class="col-3">
          <% if @minimum_password_length %>
            <em>パスワード(<%= @minimum_password_length %>文字以上)</em>
          <% end %>
        </div>
        <div class="col-3">
          <%= f.password_field :password, autofocus: true, autocomplete: "new-password" %>
        </div>
      </div>
    <div class="row mb-1">
        <div class="col-3">
          <%= f.label "パスワード(確認用)" %>
        </div>
        <div class="col-3">
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>
      </div>
    <div class="row mb-1">
        <div class="col">
          <%= f.hidden_field :is_active %>
        </div>
      </div>
    <div class="row mb-3">
      <div class="col-3"></div>
      <div class="col-3">
        <%= f.submit "新規登録", class: "btn btn-success px-3 col-8" %>
      </div>
    </div>
  <% end %>

  <div class="row">
    <h3>既に登録済みの方</h3>
  </div>
  <div class="row">
    <p><%= link_to "こちら",customer_session_path, class: "mx-2" %>からログインしてください</p>
  </div>
  
</div>

<%#= render "public/shared/links" %>