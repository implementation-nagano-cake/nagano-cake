<div class="container">
  <div class="row">
    <h3>マイページ</h3>
  </div>

  <div class="row">
    <h5><strong class='col-1'>登録情報</strong></h5>
    <%= link_to "編集する", edit_customer_path, class: "btn btn-success" %>
  </div>

  <div class="row">
    <table>
      <tbody>

        <tr>
          <th>氏名</th><td><%= @customer.full_name %></td>
        </tr>
        <tr>
          <th>カナ</th><td><%= @customer.full_name_kana %></td>
        </tr>
        <tr>
          <th>郵便番号</th><td><%= @customer.postal_code %></td>
        </tr>
        <tr>
          <th>住所</th><td><%= @customer.address %></td>
        </tr>
        <tr>
          <th>電話番号</th><td><%= @customer.telephone_number %></td>
        </tr>
        <tr>
          <th>メールアドレス</th><td><%= @customer.email %></td>
        </tr>
      </tbody>
    </table>
  </div>

  <!--<div class="row">-->
  <!--  <p>配送先</p>-->
  <!--  <%#= link_to "一覧を見る",  %>-->
  <!--</div>-->

  <div class="row">
    <h5><strong class='col-1'>注文履歴</strong></h5>
    <%= link_to "一覧を見る", orders_path, class: "btn btn-primary" %>
  </div>

</div>