    </div>
    <div class="col-8 offset-1">
      <div class="row">
        <h3>item index</h3>
      </div>
      
      <div class="row">
        <% @items.each do |item| %>
          <%= link_to item_path(item.id) do %>
                  <%= image_tag item.get_image(320, 180) %>
                <% end %>
          <%= item.name %>
          <%= item.price %>
        <% end %>
      </div>
      
    </div>
  </div>
</div>

